<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style.css" />
    <title>Dusty Blog</title>
  </head>
  <body>
    <%- include('../partials/header') %>
    <section class="container aside">
      <div>
        <h2>Recent Posts</h2>
        <section id="articles"></section>
      </div>
    </section>
    <%- include('../partials/footer') %>
    <script>
      document.addEventListener('DOMContentLoaded', function () {
        fetch(`/posts`, {
          method: 'GET',
          headers: {
            'Accept': 'application/json',
            'Content-Type': 'application/json'
          }
        })
          .then(response => response.json())
          .then(data => {
            if (!data.length) {
              document.getElementById('articles').textContent = 'No posts available'
              return
            }

            data.forEach(post => {
              const postElement = document.createElement('article')
              postElement.classList.add('post')
              postElement.innerHTML = `
                <div class="post-header">
                  <h2>
                    <a href="/posts/${post.id}">${post.title}</a>
                  </h2>
                  <span>(${post.created_at})</span>
                </div>
                <p>${post.content}</p>
                <p>By ${post.author}</p>
              `
              document.querySelector('#articles').appendChild(postElement)
            })
          })
          .catch(error => {
            console.error('Error fetching post:', error)
            document.getElementById('articles').textContent = 'Error loading post'
          })
      })
    </script>
  </body>
</html>

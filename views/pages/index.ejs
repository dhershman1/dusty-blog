<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style.css" />
    <title>Dusty Blog</title>
  </head>
  <body>
    <%- include('../partials/header') %>
    <div class="home-grid">
      <aside class="container aside">
        <div>
          <h2>Recent Posts</h2>
          <section id="articles"></section>
        </div>
      </aside>
      <section class="container">
        <div id="main" class="main">
          <div class="new-post">
            <% if (user) { %>
            <h2>Welcome <%= user %>!</h2>
            <% } %>
            <h2>Add a New Post</h2>
            <% if (!user) { %>
              <p>You need to be logged in to add a new post.</p>
              <a href="/login" class="btn">Login</a>
            <% } else { %>
            <form method="post" action="/posts">
              <label for="title">Title:</label><br>
              <input type="text" id="title" name="title"><br><br>
              <label for="content">Content:</label><br>
              <textarea id="content" name="content" rows="4" cols="50"></textarea><br><br>
              <input class="btn" type="submit" value="Add Post">
            </form>
            <% } %>
          </div>
        </div>
      </section>
    </div>
    <%- include('../partials/footer') %>
    <script>
      document.addEventListener('DOMContentLoaded', function () {
        fetch(`/posts`, {
          method: 'GET',
          headers: {
            'Accept': 'application/json',
            'Content-Type': 'application/json'
          }
        })
          .then(response => response.json())
          .then(data => {
            if (!data.length) {
              document.getElementById('articles').textContent = 'No posts available'
              return
            }

            data.forEach(post => {
              const postElement = document.createElement('article')
              postElement.classList.add('post')
              postElement.innerHTML = `
                <h2><a href="http://localhost:3000/posts/${post.id}">${post.title}</a></h2>
                <p>${post.content}</p>
                <p>By ${post.author}</p>
              `
              document.querySelector('#articles').appendChild(postElement)
            })
          })
          .catch(error => {
            console.error('Error fetching post:', error)
            document.getElementById('articles').textContent = 'Error loading post'
          })
      })
    </script>
  </body>
</html>
